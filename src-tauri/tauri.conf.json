{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "HwanNote",
  "version": "0.2.0",
  "identifier": "com.hwankr.hwannote",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "windows": [
      {
        "title": "HwanNote",
        "width": 1280,
        "height": 840,
        "minWidth": 960,
        "minHeight": 640,
        "decorations": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "../resources/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md"],
        "mimeType": "text/markdown",
        "description": "Markdown Document"
      }
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/hwankr/hwanNote/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM5N0NGRjBGQUQ4OTRERjAKUldUd1RZbXRELzk4eVpMUlJkd3M0Rjkwem4wVkhOcGQyWTJScERWTm45N3F2NHVDLy9NWE1qS00K"
    }
  }
}
